<div class="pull-right text-center">
    <label class="control-label text-center" style="padding-bottom: 0.5em;">Картинка</label>
    <img data-bind="attr: { src: Image }"></img>
    <div>
        <a href="#"  data-bind="click: $root.UploadImg">Загрузить картинку</a>
    </div>


    <div class="control-group">

        <div style="display: none">
            @using (Html.BeginForm("UploadImage", "Profile", FormMethod.Post, new { enctype = "multipart/form-data", id = "myForm" }))
            {
                <input type="file" name="bookImg" id="bookImg" />
                <button type="submit" id="uploadImage" class="btn btn-primary">Upload</button>
            }
        </div>

        @* <div style="display: none;" class="controls">
            <input id="filebutton" name="filebutton" class="input-file" type="file">
        </div>*@

    </div>
</div>

<form class="form-horizontal" data-bind="submit: $root.save">

    <fieldset>

        @Html.Partial("KnockoutSummary")

        <div class="control-group">
            <label class="control-label">Название</label>
            <div class="controls">
                <input type="text" data-bind="value: Title" required="required" class="input-xlarge">
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Подзаголовок</label>
            <div class="controls">
                <input type="text" data-bind="value: Subtitle" class="input-xlarge">
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Издатель</label>
            <div class="controls">
                <input type="text" data-bind="value: Publisher" class="input-xlarge">
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Дата Издания</label>
            <div class="controls">
                <input id="publishedDate" type="text" data-bind="value: PublishedDate" class="input-xlarge">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Кол-во страниц</label>
            <div class="controls">
                <input type="number" min="0" data-bind="value: PageCount" class="input-xlarge">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Google Book Id</label>
            <div class="controls">
                <input type="text" data-bind="value: GoogleBookId" class="input-xlarge">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">ISBN</label>
            <div data-bind="foreach: { data: ISBNs, as: 'isbn' }">

                <div class="controls">
                    <input type="text" data-bind="value: isbn.Value" required="required" class="input-xlarge">
                    <button class="btn btn-mini btn-success" data-bind="click: $root.addISBN"><i class="icon-plus"></i></button>
                    <button class="btn btn-mini btn-danger" data-bind="click: $root.removeISBN"><i class="icon-remove"></i></button>
                </div>

            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Автор(ы)</label>
            <div data-bind="foreach: { data: Authors, as: 'author' }">

                <div class="controls">
                    <input type="text" data-bind="value: author.Value" required="required" class="input-xlarge">
                    <button class="btn btn-mini btn-success" data-bind="click: $root.addAuthor"><i class="icon-plus"></i></button>
                    <button class="btn btn-mini btn-danger" data-bind="click: $root.removeAuthor"><i class="icon-remove"></i></button>
                </div>

            </div>
        </div>
        <!-- Select Basic -->
        <div class="control-group">
            <label class="control-label" for="selectbasic">Язык</label>
            <div class="controls">
                <select required="required" data-bind="options: Languages, optionsText: 'NativeName', value: Language, optionsCaption: 'Выберете язык...', optionsValue: 'Symbol'" class="input-xlarge"></select>
            </div>
        </div>

        <!-- File Button -->
        @*  <div class="control-group">
            <label class="control-label" for="filebutton">Картинка</label>
            <div class="controls">
                <input id="filebutton" name="filebutton" class="input-file" type="file">
            </div>
        </div>*@
        <div class="control-group">
            <label class="control-label">Описание</label>
            <div class="controls">
                <textarea style="width: 300px; height: 200px" data-bind="value: SearchInfo" class="input-xlarge">
                </textarea>
            </div>
        </div>
        <div class="form-actions">
            @Html.Partial("SubmitBtn")
            @Html.Partial("PreviousPageBtn")
        </div>
    </fieldset>
</form>

