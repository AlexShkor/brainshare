@using Newtonsoft.Json
@model BrainShare.ViewModels.AcceptRequestViewModel

@section Scripts{
    <script type="text/javascript" src="@Url.Content("~/Scripts/custom/Books/acceptRequestFrom.js")"></script>
    <script type="text/javascript">
        $(function () {
            var model = new AcceptRequestModel(@Html.Raw(JsonConvert.SerializeObject(Model)));
            ko.applyBindings(model);
        });
    </script>
}

<div class="row">
    <div class="span6">
        <h4>Входящий запрос на вашу книгу</h4>
        @Html.Partial("DetailsPartial", Model.YourBook)
    </div>
    <div class="span6">
        <span>От пользователя</span>
        <h4 data-bind="text: fromUser.UserName"></h4>
        <a class="btn btn-info" href="#" data-bind="click: sendMessage">Отправить сообщение</a>
        @*   <p data-bind="text: fromUser.Email"></p>*@
        <p></p>
        <a class="btn btn-danger" href="#" data-bind="click: reject">Отказать</a>
    </div>
</div>
<div>
    <div>
        <div>
            <span>Все книги пользователя </span>
            <span data-bind="text: fromUser.UserName"></span>
        </div>
        <table class="table table-condensed">
            <tbody data-bind="foreach: allBooks">
                <tr data-bind="css: { success: $root.booksYouNeedTitles().indexOf(Title) >= 0 }">
                    <td class="book-image-col">
                        <img  data-bind="attr:{src: Image}" />
                    </td>
                    <td class="span3"><strong  data-bind="text: Title"></strong></td>
                    <td data-bind="text: Authors"></td>
                    <td data-bind="text: Subtitle"></td>
                    <td data-bind="text: Publisher"></td>
                    <td data-bind="text: PublishedDate"></td>
                    <td data-bind="text: PageCount">стр </td>
                    <td>
                        <a class="btn btn-small" href="#" data-bind="click: $root.exchange">Поменяться</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
