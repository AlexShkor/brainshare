@using Newtonsoft.Json
@model BrainShare.ViewModels.EditBookViewModel

<script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {

        var model = new EditBookViewModel(@Html.Raw(JsonConvert.SerializeObject(Model)), '/books/edit');
        ko.applyBindings(model);
        $('#PublishedDate').datepicker({
            format: "yyyy M",
            minViewMode: 1,
            language: "ru"
        });
    });

</script>
<h4>Редактировать</h4>

