@using BrainShare.Utilities
@model BrainShare.ViewModels.BookViewModel
@section head{
    <meta property="og:image" content="@Model.Image" />
    <meta property="og:site_name" content="BrainShare" />
    <meta property="og:title" content="@Model.Title" />
    <meta property="og:url" content="@UrlUtility.CurrentUrl" />
    <meta property="og:description" content="@Model.SharingText" />
    <meta property="og:type" content="website/book" />
}

<div id="fb-root"></div>
<script>(function (d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/ru_RU/all.js#xfbml=1&appId=174844976010327";
    fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
<div class="fb-like" data-href="@UrlUtility.CurrentUrl" data-width="100" data-layout="button_count" data-show-faces="false" data-send="false">
</div>
