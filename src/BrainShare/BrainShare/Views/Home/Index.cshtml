@model IEnumerable<BrainShare.Documents.ActivityFeed>
@{
    ViewBag.Title = "Home Page";
}
<h2>Активность</h2>
<div class="alert alert-info">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <h3>
        Начните пользоваться сервисом прямо сейчас! 
    </h3>
    <p class="lead"><span class="underline color-black">Добавьте ваши книги в коллекцию</span> и <span class="underline color-black">укажите книги которые вам нужны</span>. Как только будет найдено подходящее предложение, вам придет сообщение. Нужна <a class="color-black" href="/help">Помощь?</a></p> 
</div>

<table class="table table-condensed table-striped">

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.Partial(item.ActivityType.ToString(), item)</td>

            </tr>
        }

    </tbody>
</table>
