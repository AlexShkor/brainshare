@using Newtonsoft.Json
@model List<BrainShare.Controllers.BookViewModel>
@{
    Layout = "~/Views/Shared/_BooksLayout.cshtml";
}
@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/Scripts/custom/Profile/myBooks.js")"></script>
    <script type="text/javascript">
        $(function() {
            var model = new MyBooksModel(@Html.Raw(JsonConvert.SerializeObject(Model)));
            ko.applyBindings(model);
        });
    </script>
}

<h4>Моя книжная полка</h4>

<table class="table table-condensed">
    <thead>
        <tr>
            <th class="span5">Название</th>
            <th class="span5">Автор(ы)    </th>
            <th class="span2"></th>
        </tr>
    </thead>
    <tbody data-bind="foreach: books">
        <tr>
            <td data-bind="text: Title"></td>
            <td data-bind="text: Authors"></td>
            <td>
                <a class="btn btn-small" href="#" data-bind="click: $root.dontHave">Удалить</a>
            </td>
        </tr>
    </tbody>
</table>
