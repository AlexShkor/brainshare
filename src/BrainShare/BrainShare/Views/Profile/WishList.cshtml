@model System.Collections.Generic.List<BrainShare.Controllers.BookViewModel>

<h2>Я ищу</h2>

<table class="table table-condensed">
    <thead>
        <tr>
            <th>Название</th>
            <th>Автор(ы)    </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Authors</td>
                <td>
                    <a class="btn btn-primary" href="/books/take/@book.Id">У кого есть?</a>
                    <a class="btn btn-danger" href="/profile/dontwant/@book.Id">Больше не ищу</a>
                </td>
            </tr>
        }
    </tbody>
</table>
