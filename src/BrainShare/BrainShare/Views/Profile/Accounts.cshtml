@using BrainShare.Utils.Extensions
@model BrainShare.ViewModels.AccountsViewModel
@{
    ViewBag.Title = "Аккаунты";
    Layout = "~/Views/Profile/_ProfileLayout.cshtml";
}
<h4>@ViewBag.Title</h4>
<table class="table table-striped table-condensed">
       
        <tbody>
                <tr>
                    <td>Вконтакте</td>
                    <th><a href="http://vk.com/id@(Model.VkId)">Ссылка</a></th>
                    <td>
                        @if (Model.VkId.HasValue())
                        {
                            <form action="/profile/disconnect" method="POST">
                                <input type="hidden" name="type" value="Vk" />
                                <button type="submit" class="btn btn-mini btn-danger">Отключить</button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-mini btn-success" href="@Url.Action("AddVkAccount","VkLogin")">Включить</a>
                        }
                    </td>
                </tr>
                <tr>
                    <td>Facebook</td>
                    <th><a href="http://facebook.com/@Model.FbId">Ссылка</a></th>
                    <td>
                        @if (Model.FbId.HasValue())
                        {
                            <form action="/profile/disconnect" method="POST">
                                <input type="hidden" name="type" value="Fb"/>
                                <button type="submit" class="btn btn-mini btn-danger">Отключить</button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-mini btn-success" href="@Url.Action("AddFbAccount","FacebookLogin")">Включить</a>
                        }
                    </td>
                </tr>
        </tbody>
    </table>