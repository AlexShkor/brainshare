@using Newtonsoft.Json
@model BrainShare.ViewModels.RegisterViewModel

<script src="http://maps.googleapis.com/maps/api/js?sensor=false&amp;libraries=places"></script>
<script src="~/Scripts/jquery.geocomplete.min.js"></script>
<script type="text/javascript" src="~/Scripts/Views/User/RegisterModel.js"></script>

<!-- ko with: model-->

<form class = "form-horizontal">
        
<fieldset>

    <legend>Заполните форму для регистрации или используйте ваш Facebook аккаунт</legend>
    <a href="/user/RegisterAsBookshell">Зарегистрировать полку</a>
       
    @Html.Partial("KnockoutSummary")

    <div class="span6">
        <div class="control-group">
            <div class="controls">
                <a class="btn-facebook" href="@Url.Action("LoginWithFacebook","FacebookLogin")">Войти</a>
                <a  href="@Url.Action("LoginWithVk", "VkLogin")">
                   <img src="/Images/vk-btn.png" />
                </a>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="FirstName">
                Имя
            </label>
            <div class="controls">
                <input type="text" data-bind="value:FirstName"/>
                <span class="required-field-symbol">*</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="LastName">
                Фамилия
            </label>
            <div class="controls">
                <input type="text" data-bind="value:LastName"/>
                <span class="required-field-symbol">*</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="geocomplete">
                Город
            </label>
            <div class="controls">
                <input id="geocomplete" placeholder="введите город" name="original_address" type="text" data-bind="value:original_address" />
                <span class="required-field-symbol">*</span>
            </div>
            <div>
            </div>
            <div id="locationValues" class="hide">
                <input name="formatted_address" id="formatted_address" type="hidden" value="@Model.formatted_address">
                <input name="country" type="hidden" id="country" value="@Model.country">
                <input name="locality" type="hidden" id="locality" value="@Model.locality">
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="Email">
                e-mail
            </label>
            <div class="controls">
                <input type="text" data-bind="value:Email"/>
                <span class="required-field-symbol">*</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="Password">
                Пароль
            </label>
            <div class="controls">
                <input type="password" data-bind="value:Password"/>
                <span class="required-field-symbol">*</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="ConfirmPassword">
                Подтвердите пароль
            </label>
            <div class="controls">
                <input type="password" data-bind="value:ConfirmPassword"/>
                <span class="required-field-symbol">*</span>
            </div>
        </div>
        <span><span class="required-field-symbol">*</span>поля обязательные для заполнения</span>
    </div>
    <div class="span5">
        <div class="thumbnail">
            <div class="map_canvas" style="height: 400px">
            </div>
        </div>
    </div>

    <div class="clearfix"></div>
    <div class="form-actions">
        <button type="submit" class="btn btn-primary" data-bind="click:$root.save">
            Готово
        </button>
        @Html.ActionLink("Отмена", "Index", "Home", null, new { @class = "btn btn-danger" })
    </div>
</fieldset>
</form>

<!-- /ko -->

<script type="text/javascript">
    $(function () {
        var model = new RegisterModel(@Html.Raw(JsonConvert.SerializeObject(Model)), "/user/Register");
        ko.applyBindings(model);

        $("#geocomplete").geocomplete({
            map: '.map_canvas',
            details: "#locationValues",
            location: 'Minsk, Belarus'
        }).bind("geocode:result", function(event, result) {
            model.updateResults();
        });;
    });
</script>


