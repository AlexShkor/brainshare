@model BrainShare.Controllers.RegisterViewModel

@{
    ViewBag.Title = "Register";
}
<script src="http://maps.googleapis.com/maps/api/js?sensor=false&amp;libraries=places"></script>
<script src="~/Scripts/jquery.geocomplete.min.js"></script>

@using (Html.BeginForm("Register", "User", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
       
    <legend>Fill the form</legend>
        <div class="span6">
            <div class="control-group">
                <div class="controls">
                    <a class="btn btn-large btn-primary" href="@Url.Action("LoginWithFacebook","User")">Войти через Facebook</a>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="FirstName">
                    FirstName
                </label>
                <div class="controls">
                    @Html.TextBox("FirstName", Model.FirstName)
                
                    @Html.ValidationMessage("FirstName")
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="LastName">
                    LastName
                </label>
                <div class="controls">
                    @Html.TextBox("LastName", Model.LastName)
                    @Html.ValidationMessage("LastName") 
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="City">
                    Введите ваш город
                </label>
                <div class="controls">
                    <input id="geocomplete" name="original_address" type="text"/>
                </div>
                <div id="locationValues" class="hide">
                    <input name="formatted_address" type="hidden">
                    <input name="country" type="hidden">
                    <input name="locality" type="hidden">
                </div>
             
                <script>
                    $(function () {
                        $("#geocomplete").geocomplete({
                            map: '.map_canvas',
                            details: "#locationValues"
                        });
                    });
                </script>
            </div>
            <div class="control-group">
                <label class="control-label" for="Email">
                    Email
                </label>
                <div class="controls">
                    @Html.TextBox("Email", Model.Email)
                
                    @Html.ValidationMessage("Email")
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="FirstName">
                    Password
                </label>
                <div class="controls">
                    @Html.Password("Password", Model.Password)
                
                    @Html.ValidationMessage("Password")
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="FirstName">
                    Confirm Password
                </label>
                <div class="controls">
                    @Html.Password("ConfirmPassword", Model.ConfirmPassword)
                
                    @Html.ValidationMessage("ConfirmPassword")
                </div>
            </div>
             
        </div>
        <div class="span5">
            <div class="thumbnail">
                <div class="map_canvas" style="height: 400px">
                    
                </div>
            </div>
           
            
        </div>
        <div class="clearfix"></div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Register
            </button>
            @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn" })
        </div>
    </fieldset>
}


