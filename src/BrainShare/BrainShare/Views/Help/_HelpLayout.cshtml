@using Brainshare.Infrastructure.Extensions
@model dynamic
@{
    Layout = "~/Views/Shared/_BootstrapLayout.cshtml";
}

<div class="container-fluid">
    
    <div class="row-fluid">
        <div class="span3">
            <div class="sidebar-nav">
                <ul class="nav nav-list">
                    <li class="nav-header">Помощь</li>
                    @Html.MenuLink("Как добавить книгу в коллекцию?", "HowToAddBook", "Help", null)
                    @Html.MenuLink("Как найти книгу?", "HowToSearchBook", "Help", null)
                    @Html.MenuLink("Как обменяться книгами?", "HowToExchangeBook", "Help", null)
                    <li class="divider"></li>
                </ul>
            </div>
        </div>
    <div class="span9">
        <h3>@ViewBag.Subtitle</h3>
        @RenderBody()
    </div>
</div>
</div>
@RenderSection("Scripts", required: false)